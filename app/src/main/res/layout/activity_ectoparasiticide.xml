<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EctoparasiticideActivity"
    android:background="@drawable/background_13">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/animalHouseTitle"
            app:cardCornerRadius="20sp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="體外寄生蟲"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:paddingHorizontal="20sp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/pop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c1d6d0"
            android:layout_marginVertical="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ectoparasiticideOutLineColor"
            app:cardCornerRadius="10dp"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/flea"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="跳蚤"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="繁殖力驚人一發不可收拾"
                            android:textColor="@color/animalDiseaseGreenBlue"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/disease_t1"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/animal_disease_1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/calibri"
                        android:textSize="15sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/animalDiseaseGreenBlue"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="跳早生活史"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@color/animalDiseaseGreenBlue"
                                android:fontFamily="@font/pop"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/animalDiseaseGreenBlue"
                            android:layout_margin="13dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="1."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="成蚤寄生在寵物身上，盡情吸血並交配產下蚤卵。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="2."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="貓咪走動時，蚤卵會掉落在居家環境各處。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="3."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="蚤卵孵化為幼蚤，容易躲藏在沙發、地毯、睡床的角落縫隙裡。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="4."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="幼蚤發育成蛹，此階段對環境的抵抗性最強，可以存活半年之久，擁有「跳蚤倉庫」之稱；破蛹而出之後則成為新一代跳蚤。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/animalDiseaseGreenBlue"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="淺在風險"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@color/animalDiseaseGreenBlue"
                                android:fontFamily="@font/pop"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/animalDiseaseGreenBlue"
                            android:layout_margin="13dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColor="@color/black"
                                        android:text="貓傳染性貧血、貓抓熱、絛蟲。"
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"
                                        android:layout_margin="10dp"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ectoparasiticideOutLineColor"
            app:cardCornerRadius="10dp"
            android:padding="3dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/tick"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="壁蝨"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="傳播疾病的吸血大王"
                            android:textColor="@color/animalDiseaseGreenBlue"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/disease_t1"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/animal_disease_2"
                        android:textColor="@color/black"
                        android:fontFamily="@font/calibri"
                        android:textSize="15sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/animalDiseaseGreenBlue"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="壁蝨生活史"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@color/animalDiseaseGreenBlue"
                                android:fontFamily="@font/pop"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/animalDiseaseGreenBlue"
                            android:layout_margin="13dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="1."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="母壁蝨交配吸飽血後，從寵物身上掉落，躲在陰暗處產卵。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="2."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="壁蝨卵在環境中孵化成幼蜱，並尋找寵物寄生。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="3."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="幼蜱吸血後掉落至環境中發育為稚蜱，並再次尋找寵物寄生。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:text="4."
                                        android:textSize="16sp"
                                        android:gravity="center_horizontal"
                                        android:fontFamily="@font/calibri"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="12"
                                        android:textColor="@color/black"
                                        android:text="稚蜱吸血後掉落至環境中發育為成蜱，並再次尋找理想宿主。成蜱吸血之後就可以進行交配繁殖。"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/calibri"/>
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ectoparasiticideOutLineColor"
            app:cardCornerRadius="10dp"
            android:padding="3dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/scabies"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="疥癬蟲"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="皮膚鑽孔讓貓極度搔癢"
                            android:textColor="@color/animalDiseaseGreenBlue"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/disease_t1"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/animal_disease_3"
                        android:textColor="@color/black"
                        android:fontFamily="@font/calibri"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ectoparasiticideOutLineColor"
            app:cardCornerRadius="10dp"
            android:padding="3dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/otodectes"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="耳疥蟲"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="讓耳朵黑又癢的禍首"
                            android:textColor="@color/animalDiseaseGreenBlue"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/pop"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/animal_disease_4"
                        android:textColor="@color/black"
                        android:fontFamily="@font/calibri"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>







    </LinearLayout>

</ScrollView>