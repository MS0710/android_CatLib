<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyCatActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_horizontal"
    android:background="@drawable/background_my_cat">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/animalHouseTitle"
            app:cardCornerRadius="20sp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nav_myCat"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:paddingHorizontal="20sp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/pop"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_myCat_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add"
            android:layout_gravity="right|center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c1d6d0"
        android:layout_marginVertical="10dp"/>

    <GridView
        android:id="@+id/gv_myCat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

</LinearLayout>