<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFACD"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginHorizontal="50dp">
                    <ImageView
                        android:id="@+id/img_myCatItem_picture"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/cat"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/img_myCatItem_birthdayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/birthdya_black"
                    android:layout_gravity="right"/>
            </FrameLayout>



            <TextView
                android:id="@+id/txt_myCatItem_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:gravity="left"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pop"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_myCatItem_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="品種"
                android:gravity="left"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pop"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_myCatItem_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生日"
                android:gravity="left"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pop"
                android:textSize="20sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>