<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CatFoodContentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/animalHouseTitle"
            app:cardCornerRadius="20sp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_catFoodContent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幼母貓-一般飼料-無穀-一般"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:paddingHorizontal="20sp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/pop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c1d6d0"
            android:layout_marginVertical="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_feedContent_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/img_feedContent_heart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_feedContent_picture"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/food"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="品牌 : "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_feedContent_brand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Instinct 原點"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="品項名稱 : "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_feedContent_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="雞肉無穀幼貓配方"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="主介紹/特點 : "
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txt_feedContent_introduce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="@string/kitten_female_cat_general_no_grain_1_1"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="成分 : "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txt_feedContent_element"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="@string/kitten_female_cat_general_no_grain_1_2"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>