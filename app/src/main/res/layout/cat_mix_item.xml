<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ectoparasiticideOutLineColor"
        app:cardCornerRadius="10dp"
        android:padding="3dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_catMixItem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="橘貓"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/txt_catMixItem_picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cat_mix_1"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="毛色:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>

            <TextView
                android:id="@+id/txt_catMixItem_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全身70～80％以上的橘色"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="性格："
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>

            <TextView
                android:id="@+id/txt_catMixItem_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mix_cat_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>