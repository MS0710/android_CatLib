<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CatPawActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:background="@drawable/background_paw">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/animalHouseTitle"
        app:cardCornerRadius="20sp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="貓咪肉掌"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/pop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c1d6d0"
        android:layout_marginVertical="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/animalDiseaseGreenBlue"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="貓咪肉掌功能"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@color/animalDiseaseGreenBlue"
                android:fontFamily="@font/pop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/animalDiseaseGreenBlue"
            android:layout_margin="13dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="123456"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/animal_catPaw_1"
                    android:textSize="16sp"
                    android:fontFamily="@font/calibri"
                    android:layout_marginVertical="5dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/catpaw_1"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <GridView
        android:id="@+id/gv_catPaw_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>