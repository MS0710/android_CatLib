<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/animalDiseaseGreenBlue"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5dp">
            <TextView
                android:id="@+id/txt_catPaw_mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="貓咪肉掌功能"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@color/animalDiseaseGreenBlue"
                android:fontFamily="@font/pop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/animalDiseaseGreenBlue"
            android:layout_margin="13dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/txt_catPaw_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="123456"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri" />
                <TextView
                    android:id="@+id/txt_catPaw_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/animal_catPaw_1"
                    android:textSize="16sp"
                    android:fontFamily="@font/calibri"
                    android:layout_marginVertical="5dp"/>

                <ImageView
                    android:id="@+id/img_catPaw_picture"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/catpaw_1"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>