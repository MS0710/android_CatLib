<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ectoparasiticideOutLineColor"
        app:cardCornerRadius="10dp"
        android:padding="3dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_catBreedItem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="波斯貓"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/txt_catBreedItem_picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/purebred_cat_1"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/txt_catBreedItem_introduce1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purebred_cat_1_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="個性:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>

            <TextView
                android:id="@+id/txt_catBreedItem_introduce2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purebred_cat_1_2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/calibri"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>